<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/background"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gotoback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:gravity="end"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Login"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#f0f0f0"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/hoa" />
    </LinearLayout>
    <EditText
        android:id="@+id/InputEmail"
        android:layout_width="510dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:autofillHints="@string/app_name"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="32dp"
        android:ems="10"
        android:hint="email"
        android:inputType="text"
        android:textColor="#f0f0f0"
        android:padding="16dp"
        tools:ignore="RtlCompat" />
    <EditText
    android:id="@+id/InputPassword"
    android:layout_width="510dp"
    android:layout_height="70dp"
    android:layout_marginStart="32dp"
    android:layout_marginLeft="32dp"
    android:layout_marginEnd="32dp"
    android:layout_marginRight="32dp"
    android:autofillHints="Password"
    android:drawableStart="@drawable/ic_lock_24"
    android:drawablePadding="32dp"
    android:ems="10"
    android:inputType="textPassword"
    android:hint="Password"
    android:textColor="#f0f0f0"
    android:padding="16dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="horizontal">
<CheckBox
    android:id="@+id/cb"
    android:layout_marginLeft="28dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
  android:hint="Remember me"
    android:paddingLeft="16dp">
</CheckBox>
    <TextView
        android:id="@+id/fogotpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password ?"
        android:gravity="end"
        android:layout_marginRight="20dp"
        android:textStyle="italic"></TextView>
</LinearLayout>

    <Button
        android:id="@+id/DKy"
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/dkbtn"
        android:elevation="15dp"
        android:onClick="gotoNext"
        android:text="Đăng nhập"
        android:textAllCaps="false"
        android:textColor="@color/blackcolor"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp">
        <ImageButton
            android:id="@+id/iconfb"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/fb"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@null">

        </ImageButton>
        <ImageButton
            android:id="@+id/icongmail"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:src="@drawable/gmail"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:background="@null">
        </ImageButton>
        <ImageButton
            android:id="@+id/iconista"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/instagram"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="20dp"
            android:background="@null">
        </ImageButton>
    </LinearLayout>
<TextView

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Tạo mới 1 tài khoản"
    android:layout_marginTop="18dp"
    android:layout_marginLeft="180dp"
    android:textStyle="bold"
    android:textSize="30dp"
    android:textColor="#f0f0f0">
</TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="HỌ VÀ TÊN: NGUYỄN HUỲNH PHI LONG"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginTop="10dp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="MSV:1811505310126"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginTop="2dp">
    </TextView>


</LinearLayout>